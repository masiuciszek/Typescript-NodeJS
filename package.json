{
  "name": "quiz-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn test:ci && next build",
    "start": "next start",
    "prebuild": "yarn make-tags-sitemap",
    "postbuild": "NODE_ENV=production next-sitemap",
    "build:style": "tailwind build src/styles/index.css -o src/styles/output.css",
    "test": "jest --watch",
    "test:ci": "jest --ci --reporters='default' --reporters='./jest/json-reporter'",
    "format": "yarn format:index && yarn format:src",
    "format:index": "prettier --write \"*.{js,ts,json,md}\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,tsx,md,mdx}\"",
    "analyze": "ANALYZE=true next build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook --no-dll",
    "lint": "eslint --ext ts --ext tsx --fix src/"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@xstate/react": "^1.3.4",
    "next": "10.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "xstate": "^4.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@emotion/babel-plugin": "^11.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@types/react": "^17.0.11",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.6.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx,js}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false
  }
}
