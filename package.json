{
  "name": "quiz-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn test:ci && next build",
    "start": "next start",
    "prebuild": "yarn make-tags-sitemap",
    "postbuild": "NODE_ENV=production next-sitemap",
    "test": "jest --watch",
    "test:ci": "jest --ci --reporters='default' --reporters='./jest/json-reporter'",
    "format": "yarn format:index && yarn format:src",
    "format:index": "prettier --write \"*.{js,ts,json,md}\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,tsx,md,mdx}\"",
    "analyze": "ANALYZE=true next build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook --no-dll",
    "lint": "eslint --ext ts --ext tsx --fix src/",
    "clear_jest": "jest --clearCache"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@xstate/react": "^1.3.4",
    "framer-motion": "^4.1.17",
    "immer": "^9.0.3",
    "next": "10.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "xstate": "^4.20.0"
  },
  "devDependencies": {
    "@47ng/check-env": "^2.0.2",
    "@babel/core": "^7.14.5",
    "@babel/generator": "^7.14.3",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/preset-env": "^7.14.4",
    "@codemod/cli": "^2.3.0",
    "@cypress/code-coverage": "^3.9.6",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@mdx-js/loader": "^1.6.22",
    "@next/bundle-analyzer": "^10.2.3",
    "@next/mdx": "^10.2.3",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/builder-webpack5": "^6.2.9",
    "@storybook/react": "^6.2.8",
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/mdx-js__react": "^1.5.3",
    "@types/node": "^14.17.2",
    "@types/qs": "^6.9.6",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-instantsearch-dom": "^6.10.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "autoprefixer": "^10.2.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-apply-mdx-type-prop": "^1.6.22",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "command-line-args": "^5.1.1",
    "cypress": "^6.9.1",
    "dotenv-flow": "^3.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-flowtype": "^5.7.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.6.0",
    "globby": "^11.0.3",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^0.6.4",
    "jsdom": "^16.6.0",
    "lint-staged": "^11.0.0",
    "pad-number": "^0.0.4",
    "parse-link-header": "^1.0.1",
    "playwright": "^1.12.2",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.1",
    "react-is": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "start-server-and-test": "^1.12.3",
    "storybook-addon-themes": "^6.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx,js}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false
  }
}
